@using GoContributeMe.Models.Model
@model GoContributeMe.Models.Model.Campaign

@{
    ViewBag.Title = "Create";
    //Campaign aCampaign = ViewBag.tempData;

}
@section CSSFileBodyNeeded{
    <style type="text/css">
        .form-style-3 textarea {
            height: 100px;
        }
    </style>
}
<div class="row">

    @using (Html.BeginForm("StartFundRising", "Contribute", FormMethod.Post, new { id = " ", @class = "form-group" }))
    {
        @Html.AntiForgeryToken()
        @*<h2 style="text-align: center;">Create your won Fundrising Campaign</h2>*@
        <br />
        <div class="col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
            <div class="form-style-3">
                <fieldset>
                    <legend>Create your won Fundrising Campaign</legend>
                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.Tittle, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.Tittle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tittle" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Tittle, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.CategoryID, "Category Type", htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.DropDownListFor(a => a.CategoryID, new SelectList(ViewBag.CategoryID, "Value", "Text"), "---Select Your Category---", new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })


                    </div>

                    <div class="form-group col-md-12 col-lg-12">

                        @Html.LabelFor(model => model.Descriptions, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                        <div class="col-md-6 col-lg-6">
                            @Html.TextAreaFor(x => x.Descriptions, new { @class = "form-control", @placeholder = "Descriptions" })
                        </div>
                        @Html.ValidationMessageFor(a => a.Descriptions)




                    </div>
                    <div class="form-group col-md-12 col-lg-12">
                        <div class="control-label col-md-3 col-lg-3">
                            <label for="female">Cover Image</label>
                        </div>


                        <div class="col-md-6 col-lg-6">
                            <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
                        </div>


                    </div>
                    <div class="form-group col-md-offset-3 col-md-9">
                        <button class="btn btn-success" type="submit" style="margin-top: 8px !important;">
                            Next<span class="fa fa-arrow-right fa-x"></span>
                        </button>
                    </div>
                </fieldset>
            </div>
        </div>
    }
</div>

@section scripts
{

    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}
